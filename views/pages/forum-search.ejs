<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="utf-8">
    <title>Forum</title>
    <% include ../partials/head.ejs %>
  </head>
  <body >
  <% include ../partials/navuser.ejs %>
  <br>
    <div style="margin-left: 20px;">
      <h3>Search Results</h3>

    <div style="margin-left:20px;">
      <h4 style="margin-top:50px;">Results</h4><br>

      <% if(results.rowCount==0) {%>
        <h5>Sorry your search returned no results</h5>
        <%}%>
      <table class="table table-striped table-hover table-dark">
        <thead>
          <tr>
            <th scope="col">Topic</th>
            <th scope="col">Category</th>
            <th scope="col">Author</th>
          </tr>
        </thead>
            <%results.rows.forEach(function(topic) { %>
              <tbody>
                <tr>
                  <td><a href="/topic/<%=topic.topic_id%>"> <%=topic.topic_subject%> </a></td>
                  <%if(topic.topic_cat==10){%>
                  <td>Body Building</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==11){%>
                  <td>Losing Fat</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==12){%>
                  <td>Gaining Weight</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==13){%>
                  <td>Injuries</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==14){%>
                  <td>Sports</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==15){%>
                  <td>Nutrition</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==16){%>
                  <td>Supplements</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==17){%>
                  <td>Motivation</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <%if(topic.topic_cat==18){%>
                  <td>Miscellaneous</td>
                  <td><%=topic.topic_by%></td>
                  <br><br>
                  <%}%>
                </tr>
              </tbody>
        <%})%>
      </table>
    </div>


    </div>

  </body>
</html>
