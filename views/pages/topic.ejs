<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="utf-8">
    <title>Forum</title>
    <% include ../partials/head.ejs %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/forum.css" />
  </head>
  <body >
  <% include ../partials/navuser.ejs %>


  <div class="info bg-dark">
    <br>
    <h4 class="text-light"> Topic: <%=topic[0].topic_subject%> </h4>
    <p class="text-light">Posted on <%=topic[0].topic_date%></p>
  </div>

  <div class="content bg-light">
    <h6 class="text-dark"><%=topic[0].topic_by%> says:</h6>
    <p class="text-dark"><%=topic[0].topic_content%></p>
  </div>

  <div class="reply bg-dark">
    <h5 class="text-light">Replies</h5>
    <div class="container topic-form text-dark">
      <form method="post" action='/postReply/<%=topic[0].topic_id%>'>
        <div class="form-group text-dark">
          <textarea style="width: 100%; height: 150px;" id="reply" name="reply"  class="form-control text-dark" placeholder="Your thoughts..."></textarea>
        </div>
        <div class="form-group text-light">
          <button type="submit" class="btn btn-info btn-dark bg-secondary">Reply</button>
        </div>
      </form>
    </div>
  </div>

  <%if(topic[0].reply_content!=null){
  topic.forEach(function(reply){%>

      <div class="replies bg-light">
        <h6 class="text-dark"><%=reply.reply_by%> says:</h6>
        <p class="text-dark"><%=reply.reply_content%></p>
        <br class="text-dark">
        <p class="text-dark">Posted on: <%=reply.reply_date%> </p>

      </div>


  <%});
}%>
