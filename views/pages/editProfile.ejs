<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Edit Student</title>
  <% include ../partials/head.ejs %>
</head>

<body>
  <% include ../partials/navuser.ejs %>
  <% include ../partials/styles/forms.ejs %>

  <br>
  <div class="signup-form">
  <h3 style="margin-left:60px;">Edit Your Details</h3>
    <form style="margin-left:60px;" action="/editProfile/<%=user.username%>" method="post">
      <div class="row form-group">
        <div class="col-md-6">
          <input type="text" class="form-control" name="username" value="<%=user.username%>" required>
        </div>
        <div class="col-md-6">
          <input type="password" class="form-control" name="password" value="<%=user.password%>" required>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-md-6">
          <input type="text" class="form-control" name="firstname" value="<%=user.firstname%>" required>
        </div>

        <div class="col-md-6">
          <input type="text" class="form-control" name="lastname" value="<%=user.lastname%>" required>
        </div>
      </div>

      <div class="form-group">
          <input type="text" class="form-control" name="email" value="<%=user.email%>" required>
      </div>
      <div class="row form-group">
        <div class="col-md-4">
          <input type="number" class="form-control" name="age" value="<%=user.age%>" required step="1">
        </div>
        <div class="col-md-4">
        <input type="number" class="form-control" name="weight" value="<%=user.weight%>" step="0.01" required>
        </div>
        <div class="col-md-4">
        <input type="number" class="form-control" name="height" value="<%=user.height%>" step="0.01" required>
        </div>
      </div>
      <% if(user.gender=='male'){%>
      <div class ="row form-group">
        <div class="col-md-3">
        <p>Gender:</p>
          <select name = "gender" value="<%=user.gender%>">
              <option value='male'>Male</option>
              <option value='female'>Female</option>
          </select>
        </div>
        <%}
        else {%>
          <div class ="row form-group">
            <div class="col-md-3">
            <p>Gender:</p>
              <select name = "gender" value="<%=user.gender%>">
                  <option value='female'>Female</option>
                  <option value='male'>Male</option>
              </select>
            </div>
          <%}%>
          <% if(user.activity_level==1.9){%>
          <div class ="col-md-4">
              <p>Activity Level:</p>
          <select name = "activity_level" value="<%=user.activity_level%>">
              <option value=1.9>Extremely Active</option>
              <option value=1.725>Very Active</option>
              <option value =1.55>Moderately Active</option>
              <option value =1.375>Lightly Active</option>
              <option value =1.2>Sedentary</option>
          </select>
          </div>
          <%}
          else if(user.activity_level==1.725) {%>
            <div class ="col-md-4">
                <p>Activity Level:</p>
            <select name = "activity_level" value="<%=user.activity_level%>">
                <option value=1.725>Very Active</option>
                <option value=1.9>Extremely Active</option>
                <option value =1.55>Moderately Active</option>
                <option value =1.375>Lightly Active</option>
                <option value =1.2>Sedentary</option>
            </select>
            </div>
          <%}
          else if(user.activity_level==1.55) {%>
            <div class ="col-md-4">
                <p>Activity Level:</p>
            <select name = "activity_level" value="<%=user.activity_level%>">
                <option value =1.55>Moderately Active</option>
                <option value=1.9>Extremely Active</option>
                <option value=1.725>Very Active</option>
                <option value =1.375>Lightly Active</option>
                <option value =1.2>Sedentary</option>
            </select>
            </div>
          <%}
          else if(user.activity_level==1.55) {%>
            <div class ="col-md-4">
                <p>Activity Level:</p>
            <select name = "activity_level" value="<%=user.activity_level%>">
                <option value =1.375>Lightly Active</option>
                <option value=1.9>Extremely Active</option>
                <option value=1.725>Very Active</option>
                <option value =1.55>Moderately Active</option>
                <option value =1.2>Sedentary</option>
            </select>
            </div>
          <%}
          else {%>
            <div class ="col-md-4">
                <p>Activity Level:</p>
            <select name = "activity_level" value="<%=user.activity_level%>">
                <option value =1.2>Sedentary</option>
                <option value=1.9>Extremely Active</option>
                <option value=1.725>Very Active</option>
                <option value =1.55>Moderately Active</option>
                <option value =1.375>Lightly Active</option>
            </select>
            </div>
          <%}%>
          <% if(user.fit_goal==1000){%>
          <div class ="col-md-5">
              <p>Your fitness GOAL!</p>
          <select name = "fit_goal" value="<%=user.fit_goal%>">
              <option value=1000>Gain muscle very fast (+1000)</option>
              <option value=500>Safe weight gain (+500)</option>
              <option value =0>Maintain weight (+0)</option>
              <option value =-500>Safe weight loss (-500)</option>
              <option value =-1000>Lose weight very quickly (-1000)</option>
          </select>
          </div>
          <%}
          else if(user.fit_goal==500) {%>
            <div class ="col-md-5">
                <p>Your fitness GOAL!</p>
            <select name = "fit_goal" value="<%=user.fit_goal%>">
                <option value=500>Safe weight gain (+500)</option>
                <option value=1000>Gain muscle very fast (+1000)</option>
                <option value =0>Maintain weight (+0)</option>
                <option value =-500>Safe weight loss (-500)</option>
                <option value =-1000>Lose weight very quickly (-1000)</option>
            </select>
            </div>
          <%}
          else if(user.fit_goal==0) {%>
            <div class ="col-md-5">
                <p>Your fitness GOAL!</p>
            <select name = "fit_goal" value="<%=user.fit_goal%>">
                <option value =0>Maintain weight (+0)</option>
                <option value=1000>Gain muscle very fast (+1000)</option>
                <option value=500>Safe weight gain (+500)</option>
                <option value =-500>Safe weight loss (-500)</option>
                <option value =-1000>Lose weight very quickly (-1000)</option>
            </select>
            </div>
          <%}
          else if(user.fit_goal==-500) {%>
            <div class ="col-md-5">
                <p>Your fitness GOAL!</p>
            <select name = "fit_goal" value="<%=user.fit_goal%>">
                <option value =-500>Safe weight loss (-500)</option>
                <option value=1000>Gain muscle very fast (+1000)</option>
                <option value=500>Safe weight gain (+500)</option>
                <option value =0>Maintain weight (+0)</option>
                <option value =-1000>Lose weight very quickly (-1000)</option>
            </select>
            </div>
          <%}
          else {%>
            <div class ="col-md-5">
                <p>Your fitness GOAL!</p>
            <select name = "fit_goal" value="<%=user.fit_goal%>">
                <option value =-1000>Lose weight very quickly (-1000)</option>
                <option value =-500>Safe weight loss (-500)</option>
                <option value=1000>Gain muscle very fast (+1000)</option>
                <option value=500>Safe weight gain (+500)</option>
                <option value =0>Maintain weight (+0)</option>
            </select>
            </div>
          <%}%>

      </div>
    </div>
      <div style="text-align:center"class="form-group">
          <button type="submit" class="btn btn-success btn-large">Submit</button>
      </div>

    </form>
  </div>
</body>
</html>
