<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="utf-8">
    <title>Forum</title>
    <% include ../partials/head.ejs %>
  </head>
  <body >
  <% include ../partials/navuser.ejs %>
  <br>
    <div style="margin-left: 20px;">
      <h3>GitFit Forum</h3>
      <br>

      <button type= "button" class="btn btn-info btn-dark" onclick='window.location.href="/addTopic"'>
       Create New Discussion</button>
        <br>
        <br>
       	<div class="row">
            <div class="col-sm-6">
                    <form class="card card-sm" method="post" action="/forum-search" >
                          <div class="card-body row no-gutters">
                               <div class="col">
                                   <input class="form-control form-control-lg form-control-borderless" name="search" type="search" placeholder="Search topics or keywords">
                               </div>

                               <div class="col-auto">
                                   <button class="btn btn-lg btn-dark" type="submit" onclick='window.location.href="/forum-search"'>Search</button>                                   </div>
                                           <!--end of col-->
                          </div>
                     </form>
                </div>
                               <!--end of col-->
        </div>
      <br>
    </div>
    <div style="margin-left:20px;">
      <h4 style="margin-top:50px;">Recent Discussions</h4><br>
      <table class="table table-striped table-hover table-dark">
        <thead>
          <tr>
            <th scope="col">Topic</th>
            <th scope="col">Category</th>
            <th scope="col">Author</th>
          </tr>
        </thead>
            <%results.forEach(function(topic) { %>
              <tbody>
                <tr>
                  <td><a href="/topic/<%=topic.topic_id%>"> <%=topic.topic_subject%> </a></td>
                  <%if(topic.topic_cat==10){%>
                  <td>Body Building</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==11){%>
                  <td>Losing Fat</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==12){%>
                  <td>Gaining Weight</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==13){%>
                  <td>Injuries</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==14){%>
                  <td>Sports</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==15){%>
                  <td>Nutrition</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==16){%>
                  <td>Supplements</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <% if(topic.topic_cat==17){%>
                  <td>Motivation</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                  <%if(topic.topic_cat==18){%>
                  <td>Miscellaneous</td>
                  <td><%=topic.topic_by%></td>
                  <%}%>
                </tr>
              </tbody>
        <%})%>
      </table>
    </div>

